    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@appOne/*": ["apps/loan/src/app/*"],
      "@mode/mylibrary1": ["libs/mylibrary1/src/index.ts"],
      "@mode/mylibrary2": ["libs/mylibrary2/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
